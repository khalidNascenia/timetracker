.row
  .col-sm-4
    = form_tag assign_weekend_path(params[:id]) do
      .panel.panel-default
        .panel-heading
          %h4 Assign Users
        .panel-body
          = select_tag :employees,
                       options_from_collection_for_select(@available_users, :id, :name),
                       multiple: true
        .panel-footer
          = submit_tag 'Assign Weekend',
                        class: 'btn btn-primary'
  .col-sm-4
    .panel.panel-default
      .panel-heading
        %h4 Currently assigned users
      .panel-body
        - if @assigned_users.count > 0
          %table.table.table-bordered.table-hover
            %thead
              %tr
                %th Name
            %tbody
              - @assigned_users.each do |user|
                %tr
                  %td
                    = user.name
                  %td
                    = link_to 'Remove', remove_weekend_path(user)
        - else
          %h5 No user assigned.
  .col-sm-4
    .panel.panel-default
      .panel-heading
        %h4 Weekend days
      .panel-body
        - if @weekend_days.count > 0
          %table.table.table-bordered.table-hover
            %thead
              %tr
                %th Name
            %tbody
              - @weekend_days.each do |days|
                %tr
                  %td
                    = days
        - else
          %h5 No Days found!
